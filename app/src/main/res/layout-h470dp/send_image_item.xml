<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_send_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical|start"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/pb_send_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_send_image"
        android:layout_alignTop="@id/iv_send_image"
        android:layout_alignEnd="@id/iv_send_image"
        android:layout_alignBottom="@id/iv_send_image" />
</RelativeLayout>